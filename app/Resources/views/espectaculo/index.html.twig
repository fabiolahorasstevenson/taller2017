{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listado de espectáculos</h1>
    <div class="container">
    <div class="row">
    <div class="col-sm-11"> </div>
     <div class="col-sm-1">
        <a href= "{{ path('espectaculo_new') }}" class="btn btn-default" aria-label="Rigth Align">         
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> </a> 
     </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Imagen</th>
                <th>Monto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for espectaculo in espectaculos %}
            <tr>
                <td><a href="{{ path('espectaculo_show', { 'id': espectaculo.id }) }}">{{ espectaculo.id }}</a></td>
                <td>{{ espectaculo.nombre }}</td>
                <td>{{ espectaculo.descripcion }}</td>
                <td>{% if espectaculo.fechaInicio %}{{ espectaculo.fechaInicio|date('d-m-Y') }}{% endif %}</td>
                <td>{% if espectaculo.fechaFin %}{{ espectaculo.fechaFin|date('d-m-Y') }}{% endif %}</td>
                <td><img class="media-object" style="width: 64px; height: 64px" src="{{ espectaculo.imagen }}"> </td>

                <td>{{ espectaculo.monto }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('espectaculo_show', { 'id': espectaculo.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('espectaculo_edit', { 'id': espectaculo.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
