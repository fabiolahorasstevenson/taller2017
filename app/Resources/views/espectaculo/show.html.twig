{% extends 'base.html.twig' %}

{% block body %}
    <h1>Espectáculos</h1>

    <table>
        <tbody>
            <tr>
                <th>id</th>
                <td>{{ espectaculo.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ espectaculo.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ espectaculo.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha inicio</th>
                <td>{% if espectaculo.fechaInicio %}{{ espectaculo.fechaInicio|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha fin</th>
                <td>{% if espectaculo.fechaFin %}{{ espectaculo.fechaFin|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ espectaculo.imagen }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ espectaculo.monto }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('espectaculo_index') }}">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('espectaculo_edit', { 'id': espectaculo.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
