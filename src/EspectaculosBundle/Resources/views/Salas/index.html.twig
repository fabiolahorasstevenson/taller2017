{% extends 'base.html.twig' %}

{% block body %}
<!-- Armar Home -->
<!-- Crear un container -->
<div class="container">
<div class="row">
	<div class="col-sm-11"> </div>
  	<div class="col-sm-1">
  	 	<a href= "{{ path('new_sala') }}" class="btn btn-default" aria-label="Rigth Align">   		
  	 	<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> </a> 
  	 </div>
</div>
<br>
<br>
<div class="row">
<div class="col-sm-12"> 
	<div class="panel panel-primary">
	 <!-- Default panel contents -->
	  <div class="panel-heading">Listado de salas</div>
	 	 <div class="panel-body">
	    <p> </p>
	  </div>

	  <!-- Table -->
	   	<table class="table">
				<tr>
					<th>Nombre</th>
					<th>Descripción</th>
					<th>Dirección</th>
					<th>         </th>
				</tr>
				{% for sala in salas %}
				<tr>
					<td>{{ sala.nombre }}</td>
					<td>{{ sala.descripcion }}</td>
					<td>{{ sala.direccion }}</td>
					<td><a href= "{{ path('edit_sala', {'id': sala.id}) }}" 
							class="btn btn-default" aria-label="Left Align">
	  					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a></td>
				</tr>
				{% endfor %}	
	  	</table>
  	</div>
 </div> 	
</div>
</div>
{% endblock %} 